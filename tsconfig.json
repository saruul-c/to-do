{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types", "./types"]
  },
  "include": [
    "*.ts",
    "controllers/**/*.ts",
    "services/**/*.ts",
    "models/**/*.ts",
    "utils/**/*.ts",
    "middleware/**/*.ts",
    "handlers/**/*.ts",
    "routers/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "test",
    "dist"
  ]
}
